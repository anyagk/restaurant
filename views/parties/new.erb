<h2>Add a new party</h2>

<form action="/parties" method="post">

<div class="button"><label for="name">Number of guests: </label>
<input id="name" type="integer" name='party[people]'><br><br><br> 

<label for="avail_table">Available tables: </label><br> 
<select id="avail_table" name="party[table_number]">
     <% @available.each do |avail| %>
     <option id="table_number" type="number" value="<%= avail %>"><%= avail %> </option>
     <% end %>
</select></div><br>

<div class="button"><input type="submit"></div>

</form>
