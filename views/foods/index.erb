<h2>Menu</h2>

<h3>Appetizers</h3>
<ul>
  <% @foods.each do |food| %>
    <% if food.course_type == "Appetizer" %>
      <li><a href="/foods/<%= food.id %>"><%= food.name %> - <%= food.price %></a></li><li><%= food.description %></li> 
    <% end %>
  <% end %>
</ul><br>

