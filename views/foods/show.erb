<h2><%= @food.name %></h2>
<p><%= @food.description %></p>
<p>$<%= @food.price %></p>
<p>Allergens:</p>
<ul>
<% @food.allergens.each do |allergen| %>
<li><%= allergen.name %></li>
<% end %>
</ul>
<p>Course: <%= @food.course_type %></p><br>

<a href="/foods/<%= @food.id %>/edit">Change the Menu Item</a>